<script>
    var uiInvoice;
    $(function () {
        uiInvoice = {

            addRow: function () {
                var event = event || window.event;
                var $tr = $(event.target).closest('tr');

                // 1. 檢查是否有空白欄位
                var itemNo = $tr.find('.ItemNo').val().trim();
                var brief = $tr.find('.brief').val().trim();
                var piece = $tr.find('.piece').val().trim();
                var unitCost = $tr.find('.UnitCost').val().trim();
                var costAmount = $tr.find('.CostAmount').val().trim();

                if (!itemNo || !brief || !piece || !unitCost || !costAmount || isNaN(piece) || isNaN(unitCost) || isNaN(costAmount)) {
                    alert('「產品編號、品名、數量、單價、金額」須填寫完成，才能新增下一列！');
                    return;
                }

                var $row = $tr.clone(true);
                $row.find('input').val('');
                $tr.after($row);
                $tr.find('td').last().empty().append($('<a class="btn" onclick="uiInvoice.deleteRow();">刪除</a>'));

            },

            deleteRow: function () {
                    if (confirm('確定刪除此項資料?')) {
                        var event = event || window.event;
                        var $tr = $(event.target).parents('tr');
                        $tr.remove();
                    }
            },
            //Ver EIVO2025
            sum: function () {
                var event = event || window.event;
                var $form = $(event.target).closest('form');
                
                var taxAmt = 0;
                var totalAmt = 0;
                var salesAmt = 0;
                var $piece = $form.find('.piece');
                var $unitCost = $form.find('.UnitCost');
                var $costAmt = $form.find('.CostAmount');
                var taxIncluded = $form.find('input[name="TaxCalc"]:checked').val() === 'TaxIncluded';
                $piece.each(function (idx) {
                    var pieceVal = math.number($piece.eq(idx).val() || 0);
                    var unitCostVal = math.number($unitCost.eq(idx).val() || 0);
                    var cost = math.multiply(pieceVal, unitCostVal);
                    $costAmt.eq(idx).val(cost);
                    totalAmt += cost;
                });
                var taxRate = math.number($form.find('input[name="TaxRate"]').val());
                if (taxIncluded) {
                    taxAmt = math.round(math.multiply(math.divide(totalAmt, math.add(1, taxRate)), taxRate));
                    salesAmt = totalAmt - taxAmt;
                } else {
                    taxAmt = math.round(math.multiply(totalAmt, taxRate));
                    salesAmt = totalAmt;
                    totalAmt = salesAmt + taxAmt;
                }
                $form.find('input[name="TotalAmount"]').val(totalAmt);
                $form.find('input[name="TaxAmount"]').val(taxAmt);
                $form.find('input[name="SalesAmount"]').val(salesAmt);
                // 合併備註
                var remark = '';
                $form.find('.ItemRemark').each(function () {
                    remark += $(this).val();
                });
                $form.find('input[name="Remark"]').val(remark);
                console.log("✅ sum function Step 4")
                return true;
            },

            preview: function () {
                    //var event = event || window.event;
                    //validateForm($(event.target).parents('form')[0]);
                    if (this.sum()) {
                        var event = event || window.event;
                        var $form = $(event.target).parents('form');
                        var prnWin = window.open('', '_preview', 'toolbar=no,location=no,status=no,menubar=no,scrollbars=auto,resizable=yes,alwaysRaised,dependent,titlebar=no,width=320,height=600');
                        prnWin.name = '_preview';
                        $form[0].target = '_preview';
                        $form.prop('action', '@Html.Raw(Url.Action("PreviewInvoice", "InvoiceBusiness"))').submit();
                    }
            },

            commit: function (forPreview) {
                //if (!confirm('  ？') || this.sum()) {
                        var event = event || window.event;
                        var $form = $(event.target).parents('form');
                        var $formData = $form.serializeObject();
                        $formData.ForPreview = forPreview;
                        showLoading();
                        $.post('@Html.Raw(Url.Action("CommitInvoice", "InvoiceBusiness", new { _viewModel.InvoiceProcessType }))', $formData, function (data) {
                            hideLoading();
                            if ($.isPlainObject(data)) {
                                alert(data.message);
                            } else {
                                var $data = $(data);
                                if (forPreview) {
                                    $data.dialog({
                                        width: 640,
                                        buttons: [
                                            {
                                                text: "關閉",
                                                icons: {
                                                    primary: "ui-icon-close"
                                                },
                                                click: function () {
                                                    $data.dialog("close");
                                                }
                                            }
                                        ]
                                    });
                                } else {
                                    $data.find('a').on('click', function (evt) {
                                        $data.dialog('close');
                                    });
                                    $data.appendTo($('body'));
                                    $data.dialog();
                                }
                            }
                        });
                //} if confirm
             },

        };
        $('#btnSum').on('click', function (event) {
            uiInvoice.sum(event);
        });

    });
</script>

