
@using System.IO
@using System.Linq.Expressions

@using Microsoft.AspNetCore.Mvc.ModelBinding
@using Microsoft.AspNetCore.Mvc.Razor

@using WebHome.Helper
@using ModelCore.Locale
@using WebHome.Models.ViewModel
@using ModelCore.Models.ViewModel
@using ModelCore.DataEntity
@using ModelCore.Security.MembershipManagement
@using WebHome.Controllers

@using ModelCore.Helper
@{

    ModelStateDictionary _modelState;
    ModelSource<InvoiceItem> models;
    SellerSelectorViewModel? _viewModel = this.Model as SellerSelectorViewModel ?? ViewBag.ViewModel as SellerSelectorViewModel;

    if (_viewModel == null)
    {
        _viewModel = new SellerSelectorViewModel { };
    }

    String _fieldName;
    String _contentID = "id" + DateTime.Now.Ticks;
    String _valueID = "value" + DateTime.Now.Ticks;
    UserProfile _profile;
    Organization? _item = _viewModel.DefaultItem;

    _modelState = (ModelStateDictionary)ViewBag.ModelState;
    models = (ModelSource<InvoiceItem>)ViewContext.HttpContext.Items["Models"]!;
    _fieldName = _viewModel.FieldName ?? ViewBag.FieldName ?? "SellerID";
    _profile = Context.GetUser();
    var _urlAction = _viewModel.UrlAction ?? Url.Action("SearchCompany", "Home", new { _viewModel.Encrypt });
}

<input type="text" class="form-control" size="40" id="@(_contentID)" value="@(_item!=null ? $"{_item.ReceiptNo} {_item.CompanyName}" : null)" placeholder="請輸入檢索關鍵字" />
<input type="hidden" id="@(_valueID)" name="@(_fieldName)" value="@(_viewModel.Encrypt==true && _viewModel.SellerID.HasValue ? _viewModel.SellerID.Value.EncryptKey() : _viewModel.SellerID.ToString())" />
<script>
        $(function () {
            debugger;
            var $input = $('#@(_contentID)');
            $input.on('change', function (evt) {
                if ($input.val() == '') {
                    $('#@(_valueID)').val('');
                }
            });
            $input.autocomplete({
                source: '@Html.Raw(_urlAction)',
                select: function (event, ui) {
                    $input.val(ui.item.label);
                    $('#@(_valueID)').val(ui.item.value);
                    event.preventDefault();
                @if (_viewModel.JS_OnSelect != null)
                {
                    <text>@Html.Raw(_viewModel.JS_OnSelect)</text>
                }
                else
                {
                    <text>$('#@(_valueID)').trigger('change');</text>
                }
                },
                close: function (event, ui) {
                    if ($input.val() == '') {
                        $('#@(_valueID)').val('');
                    }
                },
            });
        });

    @*@if (Request[_fieldName] != null)
    {
        <text>
            $(function() {
                $('#@(_valueID)').val('@(Request[_fieldName])');
            });
        </text>
    }*@
</script>




