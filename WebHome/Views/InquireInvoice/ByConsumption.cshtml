@using System.IO
@using System.Linq.Expressions


@using ModelCore.Helper
@using WebHome.Helper
@using WebHome.Models
@using WebHome.Controllers
@using WebHome.Models.ViewModel
@using ModelCore.DataEntity
@using ModelCore.Helper
@using ModelCore.Locale
@using ModelCore.Security.MembershipManagement
@using ModelCore.Models.ViewModel
@using CommonLib.Core.Utility
@using CommonLib.Utility
@using Microsoft.AspNetCore.Mvc.ModelBinding
@using Microsoft.AspNetCore.Mvc.Razor

@using Newtonsoft.Json
@{
    InquireInvoiceViewModel _viewModel = (InquireInvoiceViewModel)ViewBag.ViewModel;
}

<div class="py-2 col">
    <div class="row">
        <label for="ProcessType" class="col-md-4 col-form-label fw-bold text-nowrap">
            傳輸類型
        </label>
        <div class="col">
            <select name="ProcessType" class="form-select form-select-sm">
                <option value="">全部</option>
                <option value="@((int)Naming.InvoiceProcessType.C0401)">C0401</option>
                <option value="@((int)Naming.InvoiceProcessType.A0401)">A0401</option>
            </select>
            @if (_viewModel != null && _viewModel.ProcessType.HasValue)
            {
                <script>
                    $(function () {
                        $('select[name="ProcessType"]').val('@((int?)_viewModel.ProcessType)');
                    });
                </script>
            }
        </div>
    </div>
</div>
